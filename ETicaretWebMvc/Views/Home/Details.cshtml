@using ETicaretWebMvc.Models
@model Product
@{
    ViewBag.Title = "Details";
}

<div class="container mt-5" id="product-details">
    <div class="row">
        <!-- Product İmage -->
        <div class="col-md-6">
            <img src="~/Upload/@Model.Image" class="img-fluit rounded w-100" alt="@Model.Name">
        </div>
        <!-- Product İmage End-->
        <div class="col-md-6">
            <!-- Product Name -->
            <div class="row">
                <h1>@Model.Name</h1>
            </div>
            <!-- Product Name End-->
            <!-- Product Details -->
            <div class="row mt-1">
                @if (Model.IsApproved)
                {
                    <span class="badge badge-primary">Stokta var</span>
                }
                else
                {
                    <span class="badge badge-danger">Stokta yok</span>
                }

                <span class="product-number">#324565</span>
            </div>
            <div class="row mt-2">
                <div id="description">
                    @Model.Description
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-4">
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star-half-alt" aria-hidden="true"></i>
                    <span class="badge badge-success">53</span>
                </div>
                <div id="write-review" class="col-md-4"><a href="#">Yorum Yap</a></div>
            </div>
            <div class="row mt-2">
                <h4 id="product-price">@Model.Price TL</h4>
            </div>
            <div class="row mt-2">

                @using (Html.BeginForm("AddToCart","Cart"))
                {
                    @Html.HiddenFor(i=>i.Id)
                    <button type="submit" class="btn btn-success">
                    <i class="fa fa-cart-plus" aria-hidden="true"></i>
                    Sepete Ekle
                    </button >
                }

            </div>
            <!-- Product Details End -->
        </div>
    </div>
    <!-- Tabs -->
    <div class="row mt-3">
