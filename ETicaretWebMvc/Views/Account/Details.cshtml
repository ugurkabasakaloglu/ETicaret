@model ETicaretWebMvc.Models.OrderDetailsModel
@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Detay Bilgileri</h2>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Sipariş Durumu</dt>
                <dd class="col-sm-9">
                        <span class="badge-warning">@Model.OrderState</span>
                </dd>

                <dt class="col-sm-3">Sipariş Id</dt>
                <dd class="col-sm-9">@Model.OrderId</dd>

                <dt class="col-sm-3">Sipariş Numarası</dt>
                <dd class="col-sm-9">@Model.OrderNumber</dd>

                <dt class="col-sm-3">Toplam Fiyat</dt>
                <dd class="col-sm-9">
                    <i class="fa fa-try"></i>
                    @Model.Total
                </dd>

                <dt class="col-sm-3">Sipariş Tarihi</dt>
                <dd class="col-sm-9">@Model.OrderDate</dd>

                <dt class="col-sm-3">Adres</dt>
                <dd class="col-sm-9">
                    @Model.AdresBasligi
                    <hr />
                    @Model.Adres
                    <br />
                    @Model.Sehir - @Model.Semt - @Model.Mahalle
                    <br />
                    @Model.PostaKodu
                </dd>

                <dt class="col-sm-3">Ürünler</dt>
                <dd class="col-sm-9">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th></th>
                                <th style="width:45%;">Ürün Adı</th>
                                <th>Adet</th>
                                <th>Fiyat</th>
                                <th style="width:10%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderLines)
                            {
                            <tr>
                                <td><img src="~/Upload/@item.Image" width="70"/> </td>
                                <td>@item.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>
                                    <i class="fa fa-try"></i>
                                    @item.Price
                                </td>
                                <td><a href="/Home/Details/@item.ProductId" class="btn btn-primary btn-sm" target="_blank">
                                    <i class="fa fa-angle-double-right"></i>
                                    Ürün Detayı
                                    </a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </dd>
            </dl>
        </div>
    </div>
</div>

